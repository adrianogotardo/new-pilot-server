generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model roles {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  users users[]
}

model users {
  id       Int        @id @default(autoincrement())
  name     String
  role     roles      @relation(fields: [role_id], references: [id])
  role_id  Int        @default(1)
  email    String     @unique
  password String
}